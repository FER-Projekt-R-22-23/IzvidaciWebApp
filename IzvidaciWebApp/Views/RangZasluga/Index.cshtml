@model IzvidaciWebApp.ViewModels.RangZaslugeViewModel
@{
    ViewData["Title"] = "Rangovi zasluga";
}

<script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>
<style>
    body {
        background-image: url("https://th.bing.com/th/id/R.5c73556efd3e74b85fd6eb916ff0369f?rik=IbKm1uokF53TPg&pid=ImgRaw&r=0");
</style>

<body>
<h1>Rangovi zasluga</h1>
<a class="btn btn-primary" asp-action="Create" asp-controller="RangZasluga">Stvori novi rang po zasluzi</a>
<table class="table table-sm table-striped table-hover">
    <thead>
    <tr>
                <th>
                    <a class="btn btn-warning btn-lg text-center">
                        Identifikacijski broj
                    </a>
                </th>
                <th>
                    <a class="btn btn-info btn-lg">
                        Naziv ranga
                    </a>
                </th>
    </tr>
    </thead>
    <tbody>
    @foreach (var rang in Model.rangovi)
    {
        <tr>
            <td class="text-center">@rang.id</td>
            <td class="text-left">@rang.naziv</td>            
            <td class="text-right">
                <form asp-action="Edit" method="get"
                      asp-route-id="@rang.id">
                    <button type="submit" class="btn btn-sm btn-success" title="Uredi"><i class="fas fa-edit"></i></button>
                    </form>
            </td>
            <td class="text-right">
                <form>
                    <a asp-action="Delete" method="post"
                        asp-route-id="@rang.id"
                        class="btn btn-danger" title="ObriÅ¡i"><i class="fas fa-trash-alt"></i></a>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>
</body>
<script src='https://kit.fontawesome.com/a076d05399.js' crossorigin="anonymous"></script>