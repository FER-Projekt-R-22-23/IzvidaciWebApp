@model IzvidaciWebApp.ViewModels.ClanViewModel

@{
    ViewBag.Title = "Dodavanje člana";
}

<form asp-action="Create" method="post">
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="Ime"></label>
        <div><span asp-validation-for="Ime" class="text-danger"></span></div>
        <input asp-for="Ime" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Prezime"></label>
        <div><span asp-validation-for="Prezime" class="text-danger"></span></div>
        <input asp-for="Prezime" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="DatumRodenja"></label>
        <div><span asp-validation-for="DatumRodenja" class="text-danger"></span></div>
        <input asp-for="DatumRodenja" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Adresa"></label>
        <div><span asp-validation-for="Adresa" class="text-danger"></span></div>
        <input asp-for="Adresa" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ImaMaramu"></label>
        <div><span asp-validation-for="ImaMaramu" class="text-danger"></span></div>
        <input asp-for="ImaMaramu" class="form-check" />
    </div>
    <div class="form-group">
        <label asp-for="DatumMarama"></label>
        <div><span asp-validation-for="DatumMarama" class="text-danger"></span></div>
        <input asp-for="DatumMarama" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="MjestoMarama"></label>
        <div><span asp-validation-for="MjestoMarama" class="text-danger"></span></div>
        <input asp-for="MjestoMarama" class="form-control" />
    </div>
    <div class="text-center">
        <button class="btn btn-primary" type="submit">Unesi člana</button>
        <a asp-action="Index"
           class="btn btn-secondary">Odustani</a>
    </div>
</form>