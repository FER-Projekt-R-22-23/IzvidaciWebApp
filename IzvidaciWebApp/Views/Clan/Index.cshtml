@model ClanoviViewModel
@{
    ViewData["Title"] = "Clanovi";
}
<h1>Članovi</h1>
<a class="nav-link text-dark" asp-area="" asp-controller="Clan" asp-action="Create">Stvori novog člana</a>
<table class="table table-sm table-striped table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Ime</th>
            <th>Prezime</th>
            <th>Datum rođenja</th>
            <th>Slika</th>
            <th>Adresa</th>
            <th>Ima maramu</th>
            <th>Datum marame</th>
            <th>Mjesto marame</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var clan in Model.clanovi)
        {
            <tr>
                <td class="text-center">@clan.Id</td>
                <td class="text-center">@clan.Ime</td>
                <td class="text-center">@clan.Prezime</td>
                <td class="text-center">@clan.DatumRodenja</td>
                <td class="text-center">@clan.Slika</td>
                <td class="text-center">@clan.Adresa</td>
                <td class="text-center">@clan.ImaMaramu</td>
                <td class="text-center">@clan.DatumMarama</td>
                <td class="text-center">@clan.MjestoMarama</td>
                <td>
                    <form asp-action="Delete" method="post"
                      asp-route-id="@clan.Id">
                        <input type="hidden" name="id" value="@clan.Id" />
                        <button type="submit" class="btn btn-sm btn-danger delete" title="Obriši"><i class="fas fa-trash-alt"></i></button>
                    </form>
                </td>
                <td>
                    <form asp-action="Edit" method="get"
                      asp-route-id="@clan.Id">
                        <input type="hidden" name="id" value="@clan.Id" />
                        <button type="submit" class="btn btn-sm" title="Uredi"><i class="fas fa-edit"></i></button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
