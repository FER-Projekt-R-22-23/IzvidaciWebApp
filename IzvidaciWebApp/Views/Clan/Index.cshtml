@model ClanoviViewModel
@{
    ViewData["Title"] = "Clanovi";
}

<script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>

<h1>Članovi</h1>
<a class="btn btn-primary" asp-action="Create" asp-controller="Clan">Stvori novog člana</a>
<table class="table table-sm table-striped table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Ime</th>
            <th>Prezime</th>
            <th>Datum rođenja</th>
            <th>Slika</th>
            <th>Adresa</th>
            <th>Ima maramu</th>
            <th>Datum marame</th>
            <th>Mjesto marame</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var clan in Model.clanovi)
        {
            <tr>
                <td class="text-center">@clan.Id</td>
                <td class="text-center">@clan.Ime</td>
                <td class="text-center">@clan.Prezime</td>
                <td class="text-center">@clan.DatumRodenja.ToString("dd.MM.yyyy.")</td>
                <td class="text-center">@clan.Slika</td>
                <td class="text-center">@clan.Adresa</td>
                <td class="text-center">@clan.ImaMaramu</td>
                <td class="text-center">@clan.DatumMarama?.ToString("dd.MM.yyyy.")</td>
                <td class="text-center">@clan.MjestoMarama</td>
                <td>
                <form>
                    <a asp-action="Edit" method="post"
                   asp-route-id="@clan.Id"
                   class="btn btn-success" title="Uredi"><i class="fas fa-edit"></i> Uredi</a>
                </form>
                </td>
                <td>
                <form>
                    <a asp-action="Delete" method="post"
                    asp-route-id="@clan.Id"
                      class="btn btn-danger" title="Obriši"><i class="fas fa-trash-alt"></i> Obriši</a>
                </form>
                </td>
            </tr>
        }
    </tbody>
</table>
