@model PrijavljeniViewModel

@{
    ViewBag.Title = "Prijavljeni clanovi na edukaciju";
}
<script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>

<h1>Prijavljeni na edukaciju</h1>
<table class="table table-sm table-striped table-hover" >
    <thead>
        <tr>
            <th>Id clan</th>
            <th>Datum prijave</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var prijavljen in Model.prijavljeni)
        {
            <tr>
                <td class="text-left">@prijavljen.IdClan</td>
                <td class="text-left">@prijavljen.Datum.ToString("dd/MM/yyyy")</td>
                <td class="btn-group-spacing">

                    <a class="btn btn-sm"
                        style="background-color:Crimson ;"
                        hx-confirm="Obrisati cjenik?"
                        hx-delete="@Url.Action(nameof(SkoleController.Index), new { id = prijavljen.IdClan })"
                        title="Obriši">
                        <i class="fas fa-trash-alt whiteicon"></i>
                    </a>
                    <form asp-action="DolaziNaEdukaciju" method="post" asp-route-idEdukacije="@Model.IdEdukacije" asp-route-idClan="@prijavljen.IdClan">
                        <button type="submit" class="btn btn-outline-dark"> Dolazi
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

@section scripts{
    <script src="~/lib/jqueryui/jquery-ui.js"></script>
    <script src="~/lib/htmx/htmx.min.js" asp-append-version="true"></script>
}
