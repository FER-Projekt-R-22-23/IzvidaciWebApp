@model SkolaViewModel

@{
    ViewBag.Title = "Dodavanje skole";
}

<form asp-action="CreateSkola"
      method="post">
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="NazivSkole">Naziv skole</label>
        <div><span asp-validation-for="NazivSkole" class="text-danger"></span></div>
        <input asp-for="NazivSkole" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="MjestoPbr">Mjesto</label>
        <div><span asp-validation-for="MjestoPbr" class="text-danger"></span></div>
        <select class="form-select" asp-for="MjestoPbr" asp-items="@ViewBag.Mjesta"></select>
    </div>
    <div class="form-group">
        <label asp-for="Organizator">Organizator</label>
        <div><span asp-validation-for="Organizator" class="text-danger"></span></div>
        <select class="form-select" asp-for="Organizator" asp-items="@ViewBag.Clanovi">
        </select>
    </div>
    <div class="form-group">
        <label asp-for="KontaktOsoba">Kontakt osoba</label>
        <div><span asp-validation-for="KontaktOsoba" class="text-danger"></span></div>
        <select class="form-select" asp-for="KontaktOsoba" asp-items="@ViewBag.Clanovi"></select>
    </div>
    <input type="hidden" asp-for="Id" />
    <div class="text-center">
        <button class="btn btn-primary" type="submit">Spremi</button>
        <a asp-action="Index"
           class="btn btn-secondary">Odustani</a>
    </div>
</form>
