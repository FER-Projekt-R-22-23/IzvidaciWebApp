@model IzvidaciWebApp.ViewModels.AktivnostViewModel

@{
    ViewBag.Title = "Ažuriranje aktivnosti";
}

<form asp-route-id="@Model.IdAktivnost"
      method="post">
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="MjestoPbr">Poštanski broj mjesta</label>
        <div><span asp-validation-for="MjestoPbr" class="text-danger"></span></div>
        <input asp-for="MjestoPbr" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="KontaktOsoba">Kontakt osoba</label>
        <div><span asp-validation-for="KontaktOsoba" class="text-danger"></span></div>
        <input asp-for="KontaktOsoba" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Opis"></label>
        <div><span asp-validation-for="Opis" class="text-danger"></span></div>
        <input asp-for="Opis" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="AkcijaId">Id akcije</label>
        <div><span asp-validation-for="AkcijaId" class="text-danger"></span></div>
        <input asp-for="AkcijaId" class="form-control" />
    </div>
    <div class="text-center">
        <button class="btn btn-primary" type="submit">Spremi</button>
        <a asp-action="Index"
           class="btn btn-secondary">Odustani</a>
    </div>
</form>
