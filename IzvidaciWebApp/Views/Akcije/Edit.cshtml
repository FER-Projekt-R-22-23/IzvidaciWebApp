@model IzvidaciWebApp.ViewModels.AkcijaViewModel

@{
    ViewBag.Title = "Ažuriranje akcije";
}

<form asp-route-id="@Model.IdAkcije"
      method="post">
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="Naziv"></label>
        <div><span asp-validation-for="Naziv" class="text-danger"></span></div>
        <input asp-for="Naziv" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="KontaktOsoba">Kontakt osoba</label>
        <div><span asp-validation-for="KontaktOsoba" class="text-danger"></span></div>
        <input asp-for="KontaktOsoba" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="MjestoPbr">Poštanski broj mjesta</label>
        <div><span asp-validation-for="MjestoPbr" class="text-danger"></span></div>
        <input asp-for="MjestoPbr" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Organizator"></label>
        <div><span asp-validation-for="Organizator" class="text-danger"></span></div>
        <input asp-for="Organizator" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="KontaktOsoba">Kontakt osoba</label>
        <div><span asp-validation-for="KontaktOsoba" class="text-danger"></span></div>
        <input asp-for="KontaktOsoba" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Vrsta"></label>
        <div><span asp-validation-for="Vrsta" class="text-danger"></span></div>
        <input asp-for="Vrsta" class="form-control" />
    </div>
    <div class="text-center">
        <button class="btn btn-primary" type="submit">Spremi</button>
        <a asp-action="Index"
           class="btn btn-secondary">Odustani</a>
    </div>
</form>
