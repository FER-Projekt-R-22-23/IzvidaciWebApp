@model UdrugeViewModel
@{
    ViewData["Title"] = "Udruge";
}

<h1>Udruge</h1>
<a asp-action="Create">Unos nove udruge</a>
<table class="table table-sm table-striped table-hover" id="tabledrzave">
    <thead>
        <tr>
            <th>Id udruge</th>
            <th>Oib</th>
            <th>Naziv</th>
            <th>Sjedište</th>
            <th>Broj mobitela</th>
            <th>Mail</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var mjesto in Model.udruge)
        {
            <tr>
                <td class="text-left">@mjesto.IdUdruge</td>
                <td class="text-left">@mjesto.OIB</td>
                <td class="text-left">@mjesto.Naziv</td>
                <td class="text-left">@mjesto.Sjediste</td>
                <td class="text-left">@mjesto.BrMob</td>
                <td class="text-left">@mjesto.Mail</td>
                <td>
                    <form asp-action="Delete" method="post"
                      asp-route-id="@mjesto.IdUdruge">
                        <input type="hidden" name="id" value="@mjesto.IdUdruge" />
                        <button type="submit" class="btn btn-sm btn-danger delete" title="Obriši">@*<i class="fas fa-trash-alt"></i>*@Obriši</button>
                    </form>
                </td>
                <td>
                    <form asp-action="Edit" method="get"
                      asp-route-id="@mjesto.IdUdruge">
                        <input type="hidden" name="id" value="@mjesto.IdUdruge" />
                        <button type="submit" class="btn btn-sm btn-danger update" title="Uredi">@*<i class="fas fa-trash-alt"></i>*@Uredi</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
