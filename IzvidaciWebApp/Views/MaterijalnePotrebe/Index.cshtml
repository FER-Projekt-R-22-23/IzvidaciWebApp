@Model MaterijalnePotrebeViewModel
@{
    ViewData["Title"] = "Materijalne potrebe";
}
<a asp-action="Create">Unos nove materijalne potrebe</a>
<h1>Materijalne potrebe</h1>
<table class="table table-sm table-striped table-hover" id="tabledrzave">
    <thead>
        <tr>
            <th>Id</th>
            <th>Naziv</th>
            <th>Zadovoljeno</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var mjesto in Model.mjesta)
        {
            <tr>
                <td class="text-left">@mjesto.IdMaterijalnePotrebe</td>
                <td class="text-left">@mjesto.Naziv</td>
                <td class="text-left">@mjesto.Zadovoljeno</td>
                <td>
                    <form asp-action="Delete" method="post"
                      asp-route-id="@mjesto.IdMaterijalnePotrebe">
                        <input type="hidden" name="id" value="@mjesto.IdMaterijalnePotrebe" />
                        <button type="submit" class="btn btn-sm btn-danger delete" title="Obriši">@*<i class="fas fa-trash-alt"></i>*@Obriši</button>
                    </form>
                </td>
                <td>
                    <form asp-action="Edit" method="get"
                      asp-route-id="@mjesto.IdMaterijalnePotrebe">
                        <input type="hidden" name="id" value="@mjesto.IdMaterijalnePotrebe" />
                        <button type="submit" class="btn btn-sm btn-danger update" title="Uredi">@*<i class="fas fa-trash-alt"></i>*@Uredi</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>