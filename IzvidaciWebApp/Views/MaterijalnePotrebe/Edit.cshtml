@model IzvidaciWebApp.ViewModels.MaterijalnaPotrebaViewModel

@{
    ViewBag.Title = "Ažuriranje materijalne potrebe";
}

<form asp-route-id="@Model.IdMaterijalnePotrebe"
      method="post">
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <div><span asp-validation-for="IdMaterijalnePotrebe" class="text-danger"></span></div>
        <input type="hidden" asp-for="IdMaterijalnePotrebe" class="form-control" />
        <label asp-for="Naziv">Naziv materijalne potrebe</label>
        <div><span asp-validation-for="Naziv" class="text-danger"></span></div>
        <input asp-for="Naziv" class="form-control" />

        <div><span asp-validation-for="Organizator" class="text-danger"></span></div>
        <input type="hidden" asp-for="Organizator" class="form-control" />
        <div><span asp-validation-for="Davatelj" class="text-danger"></span></div>
        <input type="hidden" asp-for="Davatelj" class="form-control" />
        <label asp-for="Zadovoljeno">Zadivoljeno</label>
        <div><span asp-validation-for="Zadovoljeno" class="text-danger"></span></div>
        <input asp-for="Zadovoljeno"  type="checkbox"/>
    </div>
    <div class="text-center">
        <button class="btn btn-primary" type="submit">Spremi</button>
        <a asp-action="Index"
           class="btn btn-secondary">Odustani</a>
    </div>
</form>
