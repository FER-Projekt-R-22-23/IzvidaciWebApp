@model VoditeljiUdrugeViewModel
@{
    ViewData["Title"] = "VoditeljiUdruge";
}
<a asp-action="Create">Unos novog voditelja udruge</a>
<h1>VoditeljiUdruge</h1>
<table class="table table-sm table-striped table-hover" id="tabledrzave">
    <thead>
        <tr>
            <th>Id udruge</th>
            <th>Id clan</th>
            <th>Pozicija</th>
            <th>NaPozicijiDo</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var mjesto in Model.voditeljiUdruge)
        {
        <tr>
            <td class="text-left">@mjesto.IdUdruge</td>
            <td class="text-left">@mjesto.IdClan</td>
            <td class="text-left">@mjesto.Pozicija</td>
            <td class="text-left">@mjesto.NaPozicijiDo</td>
            <td>
                <form asp-action="Delete" method="post"
                      asp-route-id="@mjesto.IdClan">
                    <input type="hidden" name="id" value="@mjesto.IdClan" />
                    <button type="submit" class="btn btn-sm btn-danger delete" title="Obriši">@*<i class="fas fa-trash-alt"></i>*@Obriši</button>
                </form>
            </td>
            <td>
                <form asp-action="Edit" method="get"
                      asp-route-id="@mjesto.IdClan">
                    <input type="hidden" name="id" value="@mjesto.IdClan" />
                    <button type="submit" class="btn btn-sm btn-danger update" title="Uredi">@*<i class="fas fa-trash-alt"></i>*@Uredi</button>
                </form>
            </td>
        </tr>
        }
    </tbody>
</table>
