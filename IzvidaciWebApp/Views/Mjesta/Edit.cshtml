@model IzvidaciWebApp.ViewModels.MjestoViewModel

@{
    ViewBag.Title = "Ažuriranje mjesta";
}

<form asp-route-id="@Model.Pbr"
      method="post">
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <div><span asp-validation-for="Pbr" class="text-danger"></span></div>
        <input type="hidden" asp-for="Pbr" class="form-control" />
        <label asp-for="NazivMjesta">Naziv mjesta</label>
        <div><span asp-validation-for="NazivMjesta" class="text-danger"></span></div>
        <input asp-for="NazivMjesta" class="form-control" />
    </div>
    <div class="text-center">
        <button class="btn btn-primary" type="submit">Spremi</button>
        <a asp-action="Index"
           class="btn btn-secondary">Odustani</a>
    </div>
</form>
