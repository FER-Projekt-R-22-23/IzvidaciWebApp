@model  IzvidaciWebApp.ViewModels.ClanarineViewModel
@{
    ViewData["Title"] = "Clanarine";
}
<style>
    body {
        background-image: url("https://th.bing.com/th/id/R.5c73556efd3e74b85fd6eb916ff0369f?rik=IbKm1uokF53TPg&pid=ImgRaw&r=0");
</style>
<body>
<h1>Članarine</h1>
<a class="btn btn-primary" asp-action="Create" asp-controller="Clanarina">Dodaj novu članarinu</a>
<table class="table table-sm table-striped table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Ime</th>
            <th>Prezime</th>
            <th>Godina</th>
            <th>Iznos</th>
            <th>Plaćenost</th>
            <th>Datum</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var clanarina in Model.clanarine)
        {
            <tr>
                <td class="text-left">@clanarina.Id</td>
                <td class="text-left">@clanarina.ClanIme</td>
                <td class="text-left">@clanarina.ClanPrezime</td>
                <td class="text-left">@clanarina.Godina</td>
                <td class="text-left">@clanarina.Iznos</td>
                <td class="text-middle"><input type="checkbox" @(clanarina.Placenost ? "checked" : "") disabled />
                @*<td class="text-left">@clanarina.ClanId</td>*@
                <td class="text-left">@clanarina.Datum?.ToString("dd.MM.yyyy.")</td>
                <td>
                    <form asp-action="Edit" method="get"
                      asp-route-id="@clanarina.Id">
                        <input type="hidden" name="id" value="@clanarina.Id" />
                        <button type="submit" class="btn btn-sm" title="Uredi"><i class="fas fa-edit"></i></button>
                    </form>
                </td>
                 <td>
                    <form asp-action="Delete" method="post"
                      asp-route-id="@clanarina.Id">
                            <input type="hidden" name="id" value="@clanarina.Id" />
                            <button type="submit" class="btn btn-sm btn-danger delete" title="Obriši"><i class="fas fa-trash-alt"></i></button>
                    </form>
                 </td>
            </tr>
        }
    </tbody>
</table>
</body>
<script src='https://kit.fontawesome.com/a076d05399.js' crossorigin="anonymous"></script>