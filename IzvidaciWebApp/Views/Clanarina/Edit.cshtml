@model IzvidaciWebApp.ViewModels.ClanarinaViewModel

@{
    ViewBag.Title = "Ažuriranje članarine";
}

<form asp-route-id="@Model.Id"
      method="post">
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="Placenost"></label>
        <div><span asp-validation-for="Placenost" class="text-danger"></span></div>
        <input asp-for="Placenost" class="checkbox" />
    </div>
    <div class="form-group">
        <label asp-for="Iznos"></label>
        <div><span asp-validation-for="Iznos" class="text-danger"></span></div>
        <input asp-for="Iznos" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Godina"></label>
        <div><span asp-validation-for="Godina" class="text-danger"></span></div>
        <input asp-for="Godina" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ClanId"></label>
        <div><span asp-validation-for="ClanId" class="text-danger"></span></div>
        <input asp-for="ClanId" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Datum"></label>
        <div><span asp-validation-for="Datum" class="text-danger"></span></div>
        <input asp-for="Datum" class="form-control" />
    </div>
    <div class="text-center">
        <button class="btn btn-primary" type="submit">Spremi</button>
        <a asp-action="Index"
           class="btn btn-secondary">Odustani</a>
    </div>
</form>
